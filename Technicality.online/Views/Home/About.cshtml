</div>
<div id="contact"></div>


@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=6Lc0XLgUAAAAADraJQn_J8KSec6hTtYFIcJchkMm"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6Lc0XLgUAAAAADraJQn_J8KSec6hTtYFIcJchkMm', { action: 'homepage' }).then(function (token) {
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        document.getElementById("contact").innerHTML = this.responseText;
                    }
                };
                xhttp.open("GET", "/Home/VerifyRecaptcha?token=" + token, true);
                xhttp.send();
            });
        });
    </script>
}

